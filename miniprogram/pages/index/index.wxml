<!--index.wxml-->
<view class="container">

  <!-- 用户 openid -->
  <view class="userinfo">
    <button 
      open-type="getUserInfo" 
      bindgetuserinfo="onGetUserInfo"
      class="userinfo-avatar"
      style="background-image: url({{avatarUrl}})"
    ></button>
    <view>
      <button class="userinfo-nickname" bindtap="onGetOpenid">点击获取 openid</button>
    </view>
  </view>


  <!-- 上传图片 -->
  <view class="uploader">
    <view class="uploader-text" bindtap="doUpload">
      <text>上传图片</text>
    </view>
    <view class="uploader-container" wx:if="{{imgUrl}}">
      <image class="uploader-image" src="{{imgUrl}}" mode="aspectFit" bindtap="previewImg"></image>
    </view>
  </view>


 
  <view class="type-container">
    <label>型材规格（种类/cm）：</label>
    <view wx:for="{{typeArr}}" class="type-input">
      <input value="{{item}}" type="number"></input>
      <view data-no="{{index}}" bindtap="onTypeDeleteClick">-</view>
    </view>
    <!-- <input value="6" type="digit"></input> -->

    <label>下料尺寸（cm）：</label><label style="margin-left: 100rpx;">数量（根）：</label>
    <view class="sample-container">
      <input type="number" placeholder="输入下料长度" bindinput="onSampleInput" data-no="0" confirm-type="done"></input><text>X</text><input type='number' value="2" bindinput="onSampleNumInput" data-no="0"></input>
    </view>
    <button>确认下料</button>
  </view>
   

</view>

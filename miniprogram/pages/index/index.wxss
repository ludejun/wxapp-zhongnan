/**index.wxss**/

page {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.shops-container {
  display: flex;
  padding: 20rpx;
}
.shop-item {
  flex: 1;
  margin: 10rpx;
}
.shop-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
}
.shop-des {
  text-align: center;
  font-size: 28rpx;
}
.phone-container {
  display: flex;
  width: 100%;
  height: 200rpx;
  margin-left: 80rpx;
  align-items: center;
}
.phone-container image {
  width: 100rpx; 
  height: 100rpx;
  margin: 0 20rpx;
}